<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.activities.ReviewDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="100dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/movie_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/godfather"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/movie_title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_img" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_title_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/movie_title"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@id/movie_title_txt"
            app:layout_constraintTop_toTopOf="@id/movie_title_txt"
            app:layout_constraintBottom_toBottomOf="@id/movie_title_txt"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_posted_by_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/published_by"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_title_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_posted_by_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/published_by"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:maxLines="1"
            app:layout_constraintRight_toLeftOf="@id/movie_posted_by_txt"
            app:layout_constraintTop_toTopOf="@id/movie_posted_by_txt"
            app:layout_constraintBottom_toBottomOf="@id/movie_posted_by_txt"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_rating_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/rating"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_posted_by_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_rating_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/rating"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@id/movie_rating_txt"
            app:layout_constraintTop_toTopOf="@id/movie_rating_txt"
            app:layout_constraintBottom_toBottomOf="@id/movie_rating_txt"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_summary_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/summary"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_rating_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_summary_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/summary"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:singleLine="false"
            android:maxLines="2"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@id/movie_summary_txt"
            app:layout_constraintTop_toTopOf="@id/movie_summary_txt"
            app:layout_constraintBottom_toBottomOf="@id/movie_summary_txt"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/date"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_summary_value_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_date_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/date"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@id/movie_date_txt"
            app:layout_constraintTop_toTopOf="@id/movie_date_txt"
            app:layout_constraintBottom_toBottomOf="@id/movie_date_txt"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>